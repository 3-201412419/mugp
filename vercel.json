{
  "version": 2,
  "framework": "vite",
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "functions": {
    "api/**/*.ts": {
      "runtime": "@vercel/node@3.0.0"
    }
  },
  "env": {
    "NOTION_API_KEY": "@notion_api_key",
    "NOTION_DATABASE_ID": "@notion_database_id",
    "VITE_KAKAO_MAP_API_KEY": "@kakao_map_api_key"
  }
}
